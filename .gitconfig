[commit]
	gpgSign = true

[difftool]
    tool = vimdiff

[color "status"]
	added = green bold
	changed = yellow bold
	untracked = red bold

[core]
	editor = nvim

[merge]
	tool = nvim

[mergetool "nvim"]
	cmd = nvim -f -c \"Gdiffsplit!\" \"$MERGED\"

[commit]
	verbose = true
	template = ~/.gitmessage

[init]
	defaultBranch = develop
[gpg]
	program = /usr/local/bin/gpg
[pull]
	ff = only

[alias]
	lg = log --color --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --branches
[push]
	# YOLO
	default = current
